---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProductCard from '../../components/ProductCard.astro';
import SectionHeading from '../../components/SectionHeading.astro';
import { products, getBrandById, getCategoryBySlug, getRelatedProducts, categories } from '../../data/products';
import { site, whatsappProductLink, url } from '../../data/site';

export function getStaticPaths() {
  return products.map(p => ({
    params: { slug: p.slug },
    props: { product: p },
  }));
}

const { product } = Astro.props;
const brand = getBrandById(product.brandId);
const category = categories.find(c => c.id === product.categoryId);
const related = getRelatedProducts(product, 4);
const productUrl = `${site.url}/productos/${product.slug}/`;
const waLink = whatsappProductLink(product.name, productUrl);
---

<BaseLayout
  title={`${product.name} ${product.size} - ${product.material}`}
  description={product.shortDescription}
  image={product.images[0]}
>
  <!-- Breadcrumb -->
  <nav class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8" aria-label="Breadcrumb">
    <ol class="flex flex-wrap items-center gap-2 text-sm text-gray-500">
      <li><a href={url('/')} class="hover:text-cyan-600 transition-colors">Inicio</a></li>
      <li aria-hidden="true">/</li>
      <li><a href={url('/productos')} class="hover:text-cyan-600 transition-colors">Productos</a></li>
      <li aria-hidden="true">/</li>
      {category && (
        <>
          <li><a href={url(`/categorias/${category.slug}`)} class="hover:text-cyan-600 transition-colors">{category.name}</a></li>
          <li aria-hidden="true">/</li>
        </>
      )}
      <li class="font-medium text-gray-900 truncate">{product.name}</li>
    </ol>
  </nav>

  <section class="pb-16 sm:pb-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-10 lg:grid-cols-2">
        <!-- Gallery -->
        <div>
          <!-- Main image -->
          <div class="overflow-hidden rounded-xl border border-gray-200 bg-gray-50" id="main-image-container">
            <img
              src={product.images[0]}
              alt={product.name}
              width="600"
              height="600"
              class="h-full w-full object-contain p-8"
              id="main-image"
            />
          </div>
          <!-- Thumbnails -->
          {product.images.length > 1 && (
            <div class="mt-4 flex gap-3">
              {product.images.map((img, i) => (
                <button
                  type="button"
                  class:list={[
                    'gallery-thumb w-20 h-20 overflow-hidden rounded-lg border-2 bg-gray-50 transition-all duration-200 hover:border-cyan-400',
                    i === 0 ? 'border-cyan-500' : 'border-gray-200',
                  ]}
                  data-src={img}
                  aria-label={`Ver imagen ${i + 1}`}
                >
                  <img src={img} alt="" width="80" height="80" class="h-full w-full object-contain p-2" loading="lazy" />
                </button>
              ))}
            </div>
          )}
        </div>

        <!-- Product info -->
        <div>
          <div class="flex flex-wrap items-center gap-2 mb-3">
            {product.new && (
              <span class="rounded-full bg-cyan-500 px-3 py-0.5 text-xs font-semibold text-white">Nuevo</span>
            )}
            {product.featured && (
              <span class="rounded-full bg-gray-900 px-3 py-0.5 text-xs font-semibold text-white">Destacado</span>
            )}
            {brand && (
              <span class="text-sm font-medium text-cyan-600">{brand.name}</span>
            )}
          </div>

          <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl">{product.name}</h1>
          <p class="mt-1 text-sm text-gray-500">SKU: {product.sku}</p>

          <p class="mt-4 text-base text-gray-600 leading-relaxed">{product.description}</p>

          <!-- Quick specs -->
          <div class="mt-6 flex flex-wrap gap-3">
            <span class="inline-flex items-center gap-1.5 rounded-full border border-gray-200 bg-gray-50 px-3 py-1 text-sm text-gray-700">
              <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z"/><path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z"/></svg>
              {product.material}
            </span>
            <span class="inline-flex items-center gap-1.5 rounded-full border border-gray-200 bg-gray-50 px-3 py-1 text-sm text-gray-700">
              <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3.75v4.5m0-4.5h4.5m-4.5 0L9 9M3.75 20.25v-4.5m0 4.5h4.5m-4.5 0L9 15M20.25 3.75h-4.5m4.5 0v4.5m0-4.5L15 9m5.25 11.25h-4.5m4.5 0v-4.5m0 4.5L15 15"/></svg>
              {product.size}
            </span>
          </div>

          <!-- CTA -->
          <div class="mt-8 flex flex-col gap-3 sm:flex-row">
            <a
              href={waLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-cyan-500 px-6 py-3 text-base font-semibold text-white shadow-sm transition-all duration-200 hover:bg-cyan-600 hover:shadow-md active:scale-[0.98]"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Cotizar por WhatsApp
            </a>
            <a
              href={url('/productos')}
              class="inline-flex items-center justify-center rounded-lg border border-gray-300 bg-white px-6 py-3 text-base font-semibold text-gray-700 shadow-sm transition-all duration-200 hover:bg-gray-50 active:scale-[0.98]"
            >
              Ver más productos
            </a>
          </div>

          <!-- Specs table -->
          <div class="mt-10">
            <h2 class="text-lg font-bold text-gray-900">Especificaciones Técnicas</h2>
            <div class="mt-4 overflow-hidden rounded-lg border border-gray-200">
              <table class="w-full text-sm">
                <tbody>
                  {Object.entries(product.specs).map(([key, value], i) => (
                    <tr class:list={[i % 2 === 0 ? 'bg-gray-50' : 'bg-white']}>
                      <td class="px-4 py-3 font-medium text-gray-700 w-1/3">{key}</td>
                      <td class="px-4 py-3 text-gray-600">{value}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Related products -->
      {related.length > 0 && (
        <div class="mt-20">
          <SectionHeading
            title="Productos Relacionados"
            subtitle="Otros productos que podrían interesarte en esta misma categoría."
          />
          <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
            {related.map(p => (
              <ProductCard product={p} />
            ))}
          </div>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<script>
  // Gallery thumbnail switching
  const mainImg = document.getElementById('main-image') as HTMLImageElement;
  const thumbs = document.querySelectorAll<HTMLButtonElement>('.gallery-thumb');

  thumbs.forEach(thumb => {
    thumb.addEventListener('click', () => {
      const src = thumb.dataset.src;
      if (src && mainImg) {
        mainImg.src = src;
        thumbs.forEach(t => t.classList.replace('border-cyan-500', 'border-gray-200'));
        thumb.classList.replace('border-gray-200', 'border-cyan-500');
      }
    });
  });
</script>
