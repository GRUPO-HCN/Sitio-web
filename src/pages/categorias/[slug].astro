---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProductCard from '../../components/ProductCard.astro';
import SectionHeading from '../../components/SectionHeading.astro';
import { categories, getProductsByCategory, brands } from '../../data/products';
import { whatsappLink } from '../../data/site';

export function getStaticPaths() {
  return categories.map(c => ({
    params: { slug: c.slug },
    props: { category: c },
  }));
}

const { category } = Astro.props;
const categoryProducts = getProductsByCategory(category.id);

// Unique materials and sizes for this category
const catMaterials = [...new Set(categoryProducts.map(p => p.material))].sort();
const catSizes = [...new Set(categoryProducts.map(p => p.size))].sort();
const catBrands = [...new Set(categoryProducts.map(p => p.brandId))].map(id => brands.find(b => b.id === id)!).filter(Boolean);
---

<BaseLayout
  title={`${category.name} — Catálogo`}
  description={category.description}
>
  <!-- Breadcrumb -->
  <nav class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8" aria-label="Breadcrumb">
    <ol class="flex items-center gap-2 text-sm text-gray-500">
      <li><a href="/" class="hover:text-cyan-600 transition-colors">Inicio</a></li>
      <li aria-hidden="true">/</li>
      <li><a href="/productos" class="hover:text-cyan-600 transition-colors">Productos</a></li>
      <li aria-hidden="true">/</li>
      <li class="font-medium text-gray-900">{category.name}</li>
    </ol>
  </nav>

  <!-- Category header -->
  <section class="bg-gradient-to-br from-cyan-50 to-white py-12 sm:py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl">
        <span class="mb-3 inline-block text-4xl">{category.icon}</span>
        <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">{category.name}</h1>
        <p class="mt-3 text-base text-gray-600 leading-relaxed sm:text-lg">{category.description}</p>
        <p class="mt-2 text-sm text-gray-500">{categoryProducts.length} productos disponibles</p>
      </div>
    </div>
  </section>

  <!-- Filtered grid -->
  <section class="py-12 sm:py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <!-- Filters -->
      <div class="mb-8 flex flex-wrap gap-3">
        <select id="cat-filter-brand" class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 transition-colors focus:border-cyan-500 focus:outline-none focus:ring-2 focus:ring-cyan-500/20">
          <option value="">Todas las marcas</option>
          {catBrands.map(b => (
            <option value={b.id}>{b.name}</option>
          ))}
        </select>
        <select id="cat-filter-material" class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 transition-colors focus:border-cyan-500 focus:outline-none focus:ring-2 focus:ring-cyan-500/20">
          <option value="">Todos los materiales</option>
          {catMaterials.map(m => (
            <option value={m}>{m}</option>
          ))}
        </select>
        <select id="cat-filter-size" class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 transition-colors focus:border-cyan-500 focus:outline-none focus:ring-2 focus:ring-cyan-500/20">
          <option value="">Todos los tamaños</option>
          {catSizes.map(s => (
            <option value={s}>{s}</option>
          ))}
        </select>
      </div>

      <!-- Product grid -->
      <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4" id="cat-product-grid">
        {categoryProducts.map(product => (
          <div
            class="cat-product-item"
            data-brand={product.brandId}
            data-material={product.material}
            data-size={product.size}
          >
            <ProductCard product={product} />
          </div>
        ))}
      </div>

      <!-- No results -->
      <div class="hidden py-16 text-center" id="cat-no-results">
        <p class="text-gray-500">No se encontraron productos con esos filtros.</p>
      </div>

      <!-- CTA -->
      <div class="mt-16 rounded-xl bg-gray-900 p-8 text-center sm:p-12">
        <h2 class="text-xl font-bold text-white sm:text-2xl">¿No encuentras lo que buscas?</h2>
        <p class="mt-2 text-gray-300">Contáctanos y te ayudamos a encontrar el producto que necesitas.</p>
        <a
          href={whatsappLink(`Hola, busco un producto de la categoría ${category.name} y no lo encuentro en el catálogo.`)}
          target="_blank"
          rel="noopener noreferrer"
          class="mt-6 inline-flex items-center gap-2 rounded-lg bg-cyan-500 px-6 py-3 text-base font-semibold text-white transition-all duration-200 hover:bg-cyan-400 active:scale-[0.98]"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          Consultar por WhatsApp
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const filterBrand = document.getElementById('cat-filter-brand') as HTMLSelectElement;
  const filterMaterial = document.getElementById('cat-filter-material') as HTMLSelectElement;
  const filterSize = document.getElementById('cat-filter-size') as HTMLSelectElement;
  const grid = document.getElementById('cat-product-grid')!;
  const noResults = document.getElementById('cat-no-results')!;
  const items = grid.querySelectorAll<HTMLElement>('.cat-product-item');

  function applyFilters() {
    const brand = filterBrand.value;
    const material = filterMaterial.value;
    const size = filterSize.value;
    let visible = 0;

    items.forEach(item => {
      const iBrand = item.dataset.brand ?? '';
      const iMat = item.dataset.material ?? '';
      const iSize = item.dataset.size ?? '';

      const show = (!brand || iBrand === brand)
        && (!material || iMat === material)
        && (!size || iSize === size);

      item.style.display = show ? '' : 'none';
      if (show) visible++;
    });

    noResults.classList.toggle('hidden', visible > 0);
  }

  filterBrand.addEventListener('change', applyFilters);
  filterMaterial.addEventListener('change', applyFilters);
  filterSize.addEventListener('change', applyFilters);
</script>
