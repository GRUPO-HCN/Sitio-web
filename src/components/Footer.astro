---
import { Image } from 'astro:assets';
import { site, url } from '../data/site';
import piramideLogo from '../assets/images/piramide.jpg';

const vcHref = url('/productos-valvulas-conexiones');

const valvulasConexiones = [
  { name: 'Abrazaderas', href: vcHref },
  { name: 'Accesorios', href: vcHref },
  { name: 'Acoples - Juntas Mecánicas', href: vcHref },
  { name: 'Bridas, Rompe Agua, Ciegas y Otros', href: vcHref },
  { name: 'Canastillas y Filtro', href: vcHref },
  { name: 'Grifos contra Incendio', href: vcHref },
  { name: 'Línea HDPE', href: vcHref },
  { name: 'Línea PVC', href: vcHref },
  { name: 'M&L Negofer SAC', href: vcHref },
  { name: 'Marco y Tapas', href: vcHref },
  { name: 'Medidores', href: vcHref },
  { name: 'Tuberías', href: vcHref },
  { name: 'Válvulas', href: vcHref },
];
---

<footer class="border-t border-gray-200 bg-gray-50 dark:border-gray-800 dark:bg-gray-800/50" role="contentinfo">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-12">

      <!-- Brand -->
      <div class="lg:col-span-3">
        <a href={url('/')} class="inline-flex items-center gap-2" aria-label={`${site.name} - Inicio`}>
          <div class="flex h-9 w-9 shrink-0 items-center justify-center overflow-hidden rounded-lg bg-white shadow-sm ring-1 ring-gray-100 dark:ring-gray-700">
            <Image
              src={piramideLogo}
              alt="Logo Grupo HCN"
              width={32}
              height={32}
              class="h-8 w-8 object-contain"
              loading="lazy"
            />
          </div>
          <span class="text-lg font-bold text-gray-900 dark:text-white">{site.name}</span>
        </a>
        <p class="mt-3 text-sm text-gray-500 leading-relaxed dark:text-gray-400">
          Especialistas en válvulas, conexiones y accesorios para instalaciones hidráulicas y sanitarias.
        </p>
      </div>

      <!-- Productos: Válvulas y Conexiones -->
      <div class="lg:col-span-3">
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-900 dark:text-white">
          Válvulas y Conexiones
        </h3>
        <ul class="mt-3 columns-1 space-y-1.5 sm:columns-2 lg:columns-1">
          {valvulasConexiones.map(item => (
            <li>
              <a href={item.href} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Productos: Acero Inoxidable -->
      <div class="lg:col-span-2">
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-900 dark:text-white">
          Acero Inoxidable
        </h3>
        <ul class="mt-3 space-y-1.5">
          <li><a href={url('/productos-acero-inoxidable')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Válvulas</a></li>
          <li><a href={url('/productos-acero-inoxidable')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Accesorios</a></li>
          <li><a href={url('/productos-acero-inoxidable')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Bombas</a></li>
          <li><a href={url('/productos-acero-inoxidable')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Conexiones</a></li>
          <li><a href={url('/productos-acero-inoxidable')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Tuberías</a></li>
          <li><a href={url('/productos-acero-inoxidable')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Instrumentación</a></li>
          <li><a href={url('/productos-acero-inoxidable')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Línea Sanitaria</a></li>
        </ul>
      </div>

      <!-- Contacto -->
      <div class="lg:col-span-2">
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-900 dark:text-white">Contacto</h3>
        <ul class="mt-3 space-y-2 text-sm text-gray-500 dark:text-gray-400">
          <li class="flex items-start gap-2">
            <svg class="mt-0.5 h-4 w-4 shrink-0 text-cyan-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/></svg>
            <span>{site.address}</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="h-4 w-4 shrink-0 text-cyan-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"/></svg>
            <a href={`tel:${site.phone}`} class="transition-colors hover:text-cyan-600 dark:hover:text-cyan-400">{site.phoneDisplay}</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="h-4 w-4 shrink-0 text-cyan-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/></svg>
            <a href={`mailto:${site.email}`} class="transition-colors hover:text-cyan-600 dark:hover:text-cyan-400">{site.email}</a>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div class="lg:col-span-2">
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-900 dark:text-white">Legal</h3>
        <ul class="mt-3 space-y-2">
          <li><a href={url('/politica-privacidad')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Política de Privacidad</a></li>
          <li><a href={url('/terminos')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Términos y Condiciones</a></li>
          <li><a href={url('/aviso-legal')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Aviso Legal</a></li>
          <li><a href={url('/libro-reclamaciones')} class="text-sm text-gray-500 transition-colors hover:text-cyan-600 dark:text-gray-400 dark:hover:text-cyan-400">Libro de Reclamaciones</a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-10 flex flex-col items-center gap-3 border-t border-gray-200 pt-6 sm:flex-row sm:justify-between dark:border-gray-700">
      <p class="text-xs text-gray-400">&copy; {new Date().getFullYear()} {site.name}. Todos los derechos reservados.</p>
      <a href="https://github.com/Diego2005z" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-xs text-gray-400 transition-colors hover:text-gray-600 dark:hover:text-gray-300">
        Desarrollado por <span class="font-medium">Diego2005z</span>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
      </a>
      <div class="flex gap-4">
        <a href={site.social.facebook} target="_blank" rel="noopener noreferrer" class="text-gray-400 transition-colors hover:text-cyan-500" aria-label="Facebook">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg>
        </a>
        <a href={site.social.instagram} target="_blank" rel="noopener noreferrer" class="text-gray-400 transition-colors hover:text-cyan-500" aria-label="Instagram">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/></svg>
        </a>
      </div>
    </div>
  </div>
</footer>
