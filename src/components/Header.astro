---
import { Image } from 'astro:assets';
import { site, whatsappLink, url } from '../data/site';
import DarkModeToggle from './DarkModeToggle.astro';
import piramideLogo from '../assets/images/piramide.jpg';

const pathname = Astro.url.pathname;
const base = import.meta.env.BASE_URL;

const navLinks = [
  { href: url('/'), label: 'Inicio' },
  { href: url('/productos-valvulas-conexiones'), label: 'Productos de válvulas y conexiones' },
  { href: url('/productos-acero-inoxidable'), label: 'Productos de acero Inoxidable' },
  { href: url('/') + '#contacto', label: 'Contacto' },
];

function isActive(href: string): boolean {
  if (href === base || href === base + '#contacto') return pathname === base;
  return pathname.startsWith(href);
}
---

<!-- Thin cyan accent bar -->
<div class="h-1 w-full bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600"></div>

<header
  class="sticky top-0 z-50 border-b border-gray-100 bg-white/95 backdrop-blur-sm transition-shadow duration-300 dark:border-gray-800 dark:bg-gray-900/95"
  id="main-header"
>
  <nav class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3 sm:px-6 lg:px-8" aria-label="Navegación principal">
    <!-- Logo -->
    <a href={url('/')} class="flex items-center gap-2.5 group shrink-0" aria-label={`${site.name} - Inicio`}>
      <div class="flex h-10 w-10 shrink-0 items-center justify-center overflow-hidden rounded-lg bg-white shadow-sm ring-1 ring-gray-100 dark:ring-gray-700">
        <Image
          src={piramideLogo}
          alt="Logo Grupo HCN"
          width={36}
          height={36}
          class="h-9 w-9 object-contain"
          loading="eager"
        />
      </div>
      <div>
        <span class="block text-sm font-bold leading-tight text-gray-900 sm:text-lg dark:text-white">{site.name}</span>
        <span class="hidden text-xs text-gray-500 leading-tight sm:block dark:text-gray-400">{site.tagline}</span>
      </div>
    </a>

    <!-- Desktop nav -->
    <ul class="hidden lg:flex items-center gap-0.5">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              'rounded-md px-2.5 py-2 text-[13px] font-medium transition-colors duration-200 whitespace-nowrap',
              isActive(link.href)
                ? 'bg-cyan-50 text-cyan-700 dark:bg-cyan-900/30 dark:text-cyan-400'
                : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white',
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Desktop right section -->
    <div class="hidden lg:flex items-center gap-3 shrink-0">
      <DarkModeToggle />
      <a
        href={whatsappLink()}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-lg bg-cyan-500 px-4 py-2 text-sm font-semibold text-white shadow-sm transition-all duration-200 hover:bg-cyan-600 hover:shadow-md active:scale-[0.98]"
      >
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Cotizar
      </a>
    </div>

    <!-- Mobile right section -->
    <div class="flex items-center gap-2 lg:hidden">
      <DarkModeToggle />
      <button
        type="button"
        class="inline-flex items-center justify-center rounded-md p-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cyan-500 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white"
        aria-controls="mobile-menu"
        aria-expanded="false"
        id="mobile-menu-btn"
      >
        <span class="sr-only">Abrir menú</span>
        <svg class="h-6 w-6" id="menu-icon-open" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
        </svg>
        <svg class="hidden h-6 w-6" id="menu-icon-close" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div class="hidden border-t border-gray-100 dark:border-gray-800 lg:hidden" id="mobile-menu">
    <ul class="space-y-1 px-4 py-3">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              'block rounded-md px-3 py-2 text-base font-medium transition-colors duration-200',
              isActive(link.href)
                ? 'bg-cyan-50 text-cyan-700 dark:bg-cyan-900/30 dark:text-cyan-400'
                : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white',
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li class="pt-2">
        <a
          href={whatsappLink()}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 rounded-lg bg-cyan-500 px-4 py-2.5 text-base font-semibold text-white transition-colors hover:bg-cyan-600"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Cotizar por WhatsApp
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('menu-icon-open');
  const iconClose = document.getElementById('menu-icon-close');

  btn?.addEventListener('click', () => {
    const expanded = btn.getAttribute('aria-expanded') === 'true';
    btn.setAttribute('aria-expanded', String(!expanded));
    menu?.classList.toggle('hidden');
    iconOpen?.classList.toggle('hidden');
    iconClose?.classList.toggle('hidden');
  });

  // Shadow on scroll
  const header = document.getElementById('main-header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      header?.classList.add('shadow-sm');
    } else {
      header?.classList.remove('shadow-sm');
    }
  }, { passive: true });
</script>
