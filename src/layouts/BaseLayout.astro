---
import '../styles/global.css';
import SEOHead from '../components/SEOHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  type?: 'website' | 'article';
  prev?: string;
  next?: string;
}

const { title, description, canonical, image, type, prev, next } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <SEOHead title={title} description={description} canonical={canonical} image={image} type={type} prev={prev} next={next} />
    <!-- Dark mode: prevent flash of wrong theme. Default = light. -->
    <script is:inline>
      (function() {
        var s = localStorage.getItem('theme');
        if (s === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
    <!-- Preload Inter font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="flex min-h-screen flex-col bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <Header />
    <main class="flex-1" id="main-content">
      <slot />
    </main>
    <Footer />
    <WhatsAppButton />
  </body>
</html>
